{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": "src",
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "target": "es6",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["node_modules/@types", "@types"]
  },
  "include": [
    "src/**/*"
  ]
}
